@{
    ViewData["Title"] = "Produtos";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/produto.css" />

<section>
    <div class="text-center container">
        <br />
        <h2>Produtos</h2>

        <div>
            <div id="errorModal" style="display: none">
                <div id="msgError" class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fa fa-ban"></i>
                    <button class="btn-close" onclick="fechar_alerta();" aria-hidden="true" type="button"></button>

                    <span id="erroMsg"></span>
                </div>
            </div>
            <div id="sucessModal" style="display: none">
                <div id="msgSucess" class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fa fa-check"></i>
                    <button class="btn-close" onclick="fechar_alerta();" aria-hidden="true" type="button"></button>

                    <span id="sucessMsg"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-3 mb-3" style="display: table;">
            <a href="@Url.Action("ProdutoSalvar", "Produto")" class="btn btn-success" color:white;">Novo</a>
        </div>

        <table id="list_items" class="table table-bordered table-striped">
            <thead class="table-info">
                <tr>
                    <th>Nome</th>
                    <th>Cód. Interno</th>
                    <th>Cód. Barras</th>
                    <th>Descrição</th>
                    <th>Estoque</th>
                    <th>Data Cadastro</th>
                    <th>Valor Unit.</th>
                    <th>Editar</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot class="table-info">
                <tr>
                    <th>Nome</th>
                    <th>Cód. Interno</th>
                    <th>Cód. Barras</th>
                    <th>Descrição</th>
                    <th>Estoque</th>
                    <th>Data Cadastro</th>
                    <th>Valor Unit.</th>
                    <th>Editar</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>


</section>

<script type="text/javascript">

    $(document).ready(function () {
        listar();
    });

    function listar() {
        $('#list_items').dataTable({
            'bPaginate': true,
            'bJQueryUI': true,
            'bProcessing': true,
            'bServerSide': true,
            "searching": true,
            'bDestroy': true,
            'sAjaxSource': `@Url.Action("ProdutosPagination", "Produto")`,
            'sServerMethod': 'POST',
            'aoColumns': [
                { 'mData': 'nome' },
                { 'mData': 'codigo_interno' },
                { 'mData': 'codigo_barras' },
                { 'mData': 'descricao' },
                { 'mData': 'estoque' },
                { 'mData': 'data_cadastro' },
                { 'mData': 'valor_unitario' },
                { 'mData': 'editar' },
                { 'mData': 'acao' },
            ],
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.12.1/i18n/pt-BR.json"
            }
        });
    };

    function reativar(guuid) {
        fechar_alerta();
        $.ajax({
            type: 'POST',
            data: {
                'guuid': guuid
            },
            url: '@Url.Action("ReativarProduto", "Produto")',
            success: function (result) {
                if (result.is_action) {
                    $('#msgSucess #sucessMsg').html('Produto reativado com sucesso.');
                    $('#sucessModal').show();
                    listar();
                }
                else {
                    $('#msgError #erroMsg').html(result.error);
                    $('#errorModal').show();
                }
            },
            error: function (error)
            {
                $('#msgError #erroMsg').html(error.error);
                $('#errorModal').show();
            },
            datatype: 'json'
        });
    }

    function desativar(guuid) {
        fechar_alerta();
        $.ajax({
            type: 'POST',
            data: {
                'guuid': guuid
            },
            url: '@Url.Action("DesativarProduto", "Produto")',
            success: function (result) {
                if (result.is_action) {
                    $('#msgSucess #sucessMsg').html('Produto desativado com sucesso.');
                    $('#sucessModal').show();
                    listar();
                }
                else {
                    $('#msgError #erroMsg').html(result.error);
                    $('#errorModal').show();
                }
            },
            error: function (error)
            {
                $('#msgError #erroMsg').html(error.error);
                $('#errorModal').show();
            },
            datatype: 'json'
        });
    }

    function fechar_alerta() {
        $('#errorModal').hide();
        $('#sucessModal').hide();
    }


</script>